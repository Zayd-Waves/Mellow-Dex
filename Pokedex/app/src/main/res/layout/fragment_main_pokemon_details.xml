<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.details.MainPokemonDetails">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_above="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/pokemonName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Name"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:gravity="center_horizontal"
                        android:fontFamily="sans-serif-thin"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="end">
                    <TextView
                        android:id="@+id/type_one"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="TYPE"
                        android:textSize="15sp"
                        android:textColor="@color/type_text_color"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"/>
                    <TextView
                        android:id="@+id/type_two"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:text="TYPE"
                        android:textSize="15sp"
                        android:textColor="@color/type_text_color"
                        android:shadowColor="@color/text_shadow"
                        android:shadowDx="2"
                        android:shadowDy="2"
                        android:shadowRadius="2"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/pokemonSprite"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:src="@drawable/p0"
                    android:layout_gravity="center_horizontal"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:id="@+id/hpLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="HP"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/hpCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/hp_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/attackLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Attack"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/attackCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/attack_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/defenseLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Defense"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/defenseCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/defense_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/spAttackLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Sp. Attack"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/spAttackCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/spAttack_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/spDefenseLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Sp. Defense"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/spDefCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/spDef_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/speedLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Speed"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/speedCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <ProgressBar
                            android:id="@+id/speed_progress_bar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:max="200"
                            android:progress="0"
                            android:layout_marginTop="3dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/totalLayout"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Total"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                        <TextView
                            android:id="@+id/totalCount"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:text="000"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="15sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/navigation"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Previous"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/nextButton"
            android:text="Next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
</RelativeLayout>